<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:exported="true"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|locale|smallestScreenSize|screenLayout|uiMode"
            android:name="io.nami.app.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBarLaunch"
            android:launchMode="singleTask">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <data android:host="wallet.nami" android:scheme="cardano" />
                <action android:name="${CARDANO_WALLET_INTENT_ACTION_ENABLE}" />
                <action android:name="${CARDANO_WALLET_INTENT_ACTION_IS_ENABLED}" />
                <action android:name="${CARDANO_WALLET_INTENT_ACTION_GET_NETWORK_ID}" />
                <action android:name="${CARDANO_WALLET_INTENT_ACTION_GET_BALANCE}" />
                <action android:name="${CARDANO_WALLET_INTENT_ACTION_GET_UTXOS}" />
                <action android:name="${CARDANO_WALLET_INTENT_ACTION_GET_COLLATERAL}" />
                <action android:name="${CARDANO_WALLET_INTENT_ACTION_GET_USED_ADDRESSES}" />
                <action android:name="${CARDANO_WALLET_INTENT_ACTION_GET_UNUSED_ADDRESSES}" />
                <action android:name="${CARDANO_WALLET_INTENT_ACTION_GET_CHANGE_ADDRESS}" />
                <action android:name="${CARDANO_WALLET_INTENT_ACTION_GET_REWARD_ADDRESSES}" />
                <action android:name="${CARDANO_WALLET_INTENT_ACTION_SIGN_DATA}" />
                <action android:name="${CARDANO_WALLET_INTENT_ACTION_SIGN_TX}" />
                <action android:name="${CARDANO_WALLET_INTENT_ACTION_SUBMIT_TX}" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>

        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"></meta-data>
        </provider>
    </application>

    <!-- Permissions -->

    <uses-permission android:name="android.permission.INTERNET" />
</manifest>
